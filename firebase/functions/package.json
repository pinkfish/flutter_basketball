{
  "name": "functions",
  "private": true,
  "main": "lib/src/index.js",
  "scripts": {
    "build": "npm run lint && npm run copytemplate && tsc",
    "copytemplate": "copyfiles --up 2 --verbose \"src/db/templates/**\" lib/src",
    "deploy": "firebase deploy --only functions",
    "lint": "eslint --ext .ts,.js,.jsx,.tsx src",
    "logs": "firebase functions:log",
    "pretty": "prettier --write \"./**/*.{js,jsx,json,ts}\"",
    "prettyjson": "prettier --write \"package.json\"",
    "prettyrules": "prettier --plugin-search-dir=./ --write \"../*.rules\"",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "npm run build && firebase emulators:exec --only firestore \"mocha --parallel=false --trace-warnings --unhandled-rejections=strict --reporter spec\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,ts}": "prettier --write"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "@google-cloud/storage": "^4.7.0",
    "axios": "^0.19.2",
    "build-url": "^3.0.0",
    "camelcase": "^5.3.1",
    "child-process-promise": "^2.2.1",
    "cors": "^2.8.5",
    "ffmpeg-static": "^4.2.7",
    "ffprobe-static": "^3.0.0",
    "firebase-admin": "^8.13.0",
    "firebase-function-tools": "^1.1.4",
    "firebase-functions": "^3.11.0",
    "fluent-ffmpeg": "^2.1.2",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "lodash": "^4.17.21",
    "lodash.set": "^4.3.2",
    "node-fetch": "^2.6.0",
    "nodemailer": "^6.4.11",
    "nodemailer-mailgun-transport": "^2.0.0",
    "qs": "^6.9.4"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.11",
    "@types/camelcase": "^5.2.0",
    "@types/chai": "^4.2.12",
    "@types/child-process-promise": "^2.2.1",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/express-serve-static-core": "^4.17.9",
    "@types/ffmpeg-static": "^3.0.0",
    "@types/ffprobe-static": "^2.0.0",
    "@types/fluent-ffmpeg": "^2.1.14",
    "@types/glob": "^7.1.3",
    "@types/lodash.set": "^4.3.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.15",
    "@types/node-fetch": "^2.5.7",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-mailgun-transport": "^1.4.1",
    "@types/proxyquire": "^1.3.28",
    "@types/qs": "^6.9.4",
    "@types/readable-stream": "^2.3.9",
    "@types/request-promise": "^4.1.46",
    "@types/sinon": "^9.0.5",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.2.0",
    "copyfiles": "^2.3.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "firebase-functions-test": "^0.2.1",
    "husky": "^4.2.5",
    "lint-staged": "10.2.2",
    "mocha": "^7.2.0",
    "prettier": "^1.19.1",
    "prettier-plugin-packagejson": "^2.2.5",
    "pretty": "^2.0.0",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.3",
    "sort-package-json": "^1.44.0",
    "ts-node": "^8.10.2",
    "ts-sinon": "^1.2.0",
    "tslint": "^5.12.0",
    "typescript": "^3.9.7",
    "uuid": "^8.3.0"
  },
  "engines": {
    "node": "10"
  }
}
