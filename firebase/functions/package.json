    "@types/glob": "^7.1.1",
    "@types/lodash.set": "^4.3.6",
    "@types/node-fetch": "^2.5.7",
    "@types/qs": "^6.9.2",
    "axios": "^0.19.2",
    "camelcase": "^5.3.1",
    "child-process-promise": "^2.2.1",
